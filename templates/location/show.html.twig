{% extends 'layout_crud.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ location.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ location.country }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ location.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ location.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button-container">
        <a href="{{ path('app_location_index') }}" class="btn btn-secondary me-2">back to list</a>
        <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-secondary me-2">edit</a>
    </div>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
