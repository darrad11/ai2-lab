{% extends 'layout_crud.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Country</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.city }}</td>
                <td>{{ location.country }}</td>
                <td>{{ location.latitude }}</td>
                <td>{{ location.longitude }}</td>
                <td>
                    <div class="button-container">
                        <a href="{{ path('app_location_show', {'id': location.id}) }}" class="btn btn-secondary me-2">show</a>
                        <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-secondary me-2">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="button-container">
        <a href="{{ path('app_location_new') }}" class="btn btn-primary">Create new</a>
    </div>
{% endblock %}
