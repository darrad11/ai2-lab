    {# lad D #}
    <div class="row mt-3">
        <div class="col">
            <h1>Weather in {{ location.city }}, {{ location.country }}</h1>
        </div>
    </div>

    <div class="row mt-3 forecasts">
        {% for dummy in dummyForecast %}
            <div class="col-12 col-md-6">
                <div class="forecast-card">
                    <div class="row">
                        <div class="forecast-card-header col-12 d-flex justify-content-between align-items-center">
                            <div class="day">{{ dummy.date | date('l') }}</div>
                            <div class="date">{{ dummy.date | date('d.m') }}</div>
                        </div>

                        <div class="forecast-card-general col-12">
                            <div class="row">
                                <div class="col-6 text-center">
                                    <i class="bi-{{ dummy.icon }} forecast-icon"></i>
                                </div>
                                <div class="col-6">
                                    <div class="temperature">{{ dummy.celsiusTemperature }}&deg;</div>
                                    <div class="fl-temperature">Feels like {{ dummy.flcelsiusTemperature }}&deg;C</div>
                                </div>
                            </div>
                        </div>
                        <div class="forecast-card-details col-12 mt-3">
                            <dl>
                                <dt>Pressure</dt>
                                <dd>{{ dummy.pressure }} hPa</dd>

                                <dt>Humidity</dt>
                                <dd>{{ dummy.humidity }}%</dd>

                                <dt>Wind Speed</dt>
                                <dd>{{ dummy.wind_speed }} m/s</dd>

                                <dt>Wind Direction</dt>
                                <dd>{{ dummy.wind_direction }}</dd>

                                <dt>Cloudiness</dt>
                                <dd>{{ dummy.cloudiness }}%</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}